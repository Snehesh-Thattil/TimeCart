{{!-- CSS --}}
<link rel="stylesheet" href="/stylesheets/common/header/header.css">

{{!-- HBS --}}
<header class="user-header header_component">
    <div class="icons">
        <i class="fa-solid fa-bars" onclick="toggle()"></i>
        <a class="navbar-brand" href="/">
            <img src="/images/resources/TimeCart Logo.jpeg" class="logo" alt="timeCart logo">
        </a>
    </div>

    <div class="nav-items">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/"> <i class="fa-solid fa-house"></i> Home</a>
        </li>
        <li class="nav-item mobile-only">
            <a class="nav-link" href="/profile"> <i class="fa-solid fa-user"></i> Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/wishlist"> <i class="fa-solid fa-heart"></i> Wishlists</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/orders"> <i class="fa-solid fa-truck"></i> Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/cart"> <i class="fa-solid fa-cart-shopping"></i> Cart</a>
            <p class="cart-count" id="cart-count">{{cartCount}}</p>
        </li>
        <li class="nav-item mobile-only">
            <a class="nav-link" href="/seller"> <i class="fa-solid fa-boxes-packing"></i> Seller Home</a>
        </li>
    </div>

    <form action="" class="search-products">
        <input class="form-control me-2" type="search" placeholder="Search watches, brands, types, etc..."
            aria-label="Search">
        <a href=""> <button class="btn btn-outline-success">Search</button></a>
    </form>

    <a href="/seller" class="seller">Seller Home <i class="fa-solid fa-store"></i> </a>

    <div class="login">
        {{#if user}}
        <a href="/profile" class="nav-link">{{user.name}} <i class="fa-regular fa-circle-user"></i> </a>
        {{else}}
        <a class="nav-link" href="/login">Login <i class="fa-solid fa-right-to-bracket"></i> </a>
        {{/if}}
    </div>
</header>

{{!-- JS --}}
<script src="/javascripts/common/header.js"></script>