{{!-- CSS --}}
<link rel="stylesheet" href="/stylesheets/seller/manage-product/manage-product.css">

{{!-- HBS --}}
<section class="manage-products_component">
    <h3>Your product listings :</h3>
    <div class="table-wrapper">
        {{#if products}}
        <table>
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Type</th>
                    <th scope="col">Price</th>
                    <th scope="col">Org. price</th>
                    <th scope="col">Photos</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
                {{#each products}}
                <tr>
                    <td scope="row">{{addition @index 1}}</td>
                    <td>{{this.product_name}}</td>
                    <td>{{this.brand_name}}</td>
                    <td>{{this.type}}</td>
                    <td> <span class="currency">₹</span> {{this.selling_price}}</td>
                    <td> <span class="currency">₹</span> {{this.original_price}}</td>
                    <td class="photos">
                        {{#each this.imgNames}}
                        <img style="width: 3rem;" src="/images/products/{{this}}" alt="mobile">
                        {{/each}}
                    </td>

                    <td class="buttons">
                        <a href="/seller/edit-product/{{this._id}}" class="edit-btn">Edit</a>
                        <a href="/seller/delete-product?id={{this._id}}" class="delete-btn"
                            onclick="return confirm('Delete the product {{this.product_name}} ?')">Unlist</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p class="empty-products">You dont have any active products listed</p>
        {{/if}}
    </div>
    <a href="/seller/add-product" class="add-btn">List new product</a>
</section>