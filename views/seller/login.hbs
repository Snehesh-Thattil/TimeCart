{{!-- CSS --}}
<link rel="stylesheet" href="/stylesheets/seller/login/login.css">

{{!-- HBS --}}
<div class="login login_component seller_login">
    <h2>Seller Login</h2>
    {{#if loginErr}}<p>{{loginErr}}</p>{{/if}}

    <form action="/seller/login" method="post">
        <input type="email" name="email" required placeholder="Enter email address">
        <input type="password" name="password" minlength="3" maxlength="32" required placeholder="Enter password">
        <div class="actions">
            <button type="submit">Login</button>
            <a href="/seller/signup">Create new account ?</a>
        </div>
    </form>
</div>