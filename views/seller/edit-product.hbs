{{!-- CSS --}}
<link rel="stylesheet" href="/stylesheets/admin/add-product/add-product.css">

{{!-- HBS --}}
<section class="add-product product-form_component">
    <h2>Edit Product</h2>
    <form action="/admin/submit-update/{{product._id}}" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="">Name and brand</label>
            <input type="text" name="brand_name" placeholder="Brand name" value="{{product.brand_name}}" required>
            <input type="text" name="product_name" placeholder="Product name" value="{{product.product_name}}" required>
        </div>

        <div class="form-group">
            <label for="">Type</label>

            <div class="radios">
                <div class="radio">
                    <label for="analog">Analog</label>
                    <input type="radio" name="type" id="analog" {{#if (eq product.type "analog" )}} checked {{/if}}
                        value="analog" required>
                </div>

                <div class="radio">
                    <label for="digital">Digital</label>
                    <input type="radio" name="type" id="digital" {{#if (eq product.type "digital" )}} checked {{/if}}
                        value="digital" required>
                </div>

                <div class="radio">
                    <label for="smartwatch">Smartwatch</label>
                    <input type="radio" name="type" id="smartwatch" {{#if (eq product.type "smartwatch" )}} checked
                        {{/if}} value="smartwatch" required>
                </div>

                <div class="radio">
                    <label for="chronograph">Chronograph</label>
                    <input type="radio" name="type" id="chronograph" {{#if (eq product.type "chronograph" )}} checked
                        {{/if}} value="chronograph" required>
                </div>

                <div class="radio">
                    <label for="hybrid">Hybrid</label>
                    <input type="radio" name="type" id="hybrid" {{#if (eq product.type "hybrid" )}} checked {{/if}}
                        value="hybrid" required>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="">Description</label>
            <textarea name="description" rows="10" minlength="50" maxlength="9999"
                placeholder="Describe the product details" required>{{product.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="">Pricing details</label>
            <input type="number" min="9" max="99999999" name="selling_price" placeholder="Selling price"
                value="{{product.selling_price}}" required>
            <input type="number" min="9" max="99999999" name="original_price" placeholder="Original price"
                value="{{product.original_price}}" required>
        </div>

        <div class="form-group">
            <label for="image">Images</label>
            <div class="img-upload" onclick="addImage()">
                <img src="/images/resources/image-upload-icon.png" alt="">
                <div class="upload-right">
                    <h4>UPLOAD YOUR PRODUCT IMAGES</h4>
                    <p>You can upload upto 10 images</p>
                </div>
            </div>
            <div class="preview-container" id="imagePreviewContainer">
                {{#each product.imgNames}}
                <div class="wrapper">
                    <img src="/images/products/{{this}}" alt="watch-photo">
                    <span>‚ùå</span>
                </div>
                {{/each}}
            </div>
            <input type="file" name="image" accept="image/*" multiple id="imgInput" style="display: none;" required>
        </div>

        <div class="form-group">
            <button type="submit">Submit</button>
        </div>
    </form>
</section>


{{!-- JS --}}
<script src="/javascripts/admin/edit-product.js"></script>