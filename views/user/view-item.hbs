{{!-- CSS --}}
<link rel="stylesheet" href="/stylesheets/user/view-item/view-item.css">

<div class="view-item">
    <div class="details-wrapper">
        <div class="photos-and-actions">
            <div class="photos">
                <div class="photos-list">
                    {{#each product.imgNames}}
                    <img src="/images/products/{{this}}" alt=""
                        class="{{#if (eq this ../product.coverImg)}} selected {{/if}}" onclick="viewImg('{{this}}')">
                    {{/each}}
                </div>
                <div class="photo-viewed">
                    <img src="/images/products/{{product.coverImg}}" id="viewed-img" alt="">
                </div>
            </div>
            <div class="actions">
                <form action="/add-to-cart/{{product._id}}" method="POST">
                    <button type="submit" class="buttons">Add to Cart</button>
                </form>

                <form action="/add-to-wishlist/{{product._id}}" method="POST">
                    <button type="submit" class="buttons">Save to Wishlist</button>
                </form>
            </div>
        </div>

        <div class="details">
            <div class="overview">
                <div class="name">
                    <h3>{{product.brand_name}}</h3>
                    <h2>{{product.product_name}}</h2>
                    <p>{{product.description}}</p>
                </div>

