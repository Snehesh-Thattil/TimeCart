    <div class="reviews-wrapper">
        <h2 class="title">Product Reviews</h2>

        <div class="total-rating">
            {{#if ratingAvg}}
            <h1>Rating: {{ratingAvg}} / 10</h1>
            {{else}}
            <h1>Ohh! No Ratings so far</h1>
            {{/if}}
        </div>

