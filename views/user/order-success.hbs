{{!-- CSS --}}
<link rel="stylesheet" href="/stylesheets/user/order-success/order-success.css">

<div class="order-success_page">
    <div class="success-msg">
        <img src="/images/resources/order-placed.png" alt="">
        <h2>ORDER SUCCESSFUL</h2>
    </div>

    <div class="order-infos">
        <div class="address">
            <p class="heading"><i class="fa-solid fa-truck"></i>Delivery Address</p>
            <p class="content">{{user.name}}, {{order.deliveryDetails.addressLine1}},
                {{order.deliveryDetails.addressLine2}},
                {{order.deliveryDetails.district}}-{{order.deliveryDetails.pincode}} </p>
        </div>

        <div class="contact">
            <p class="heading"><i class="fa-solid fa-phone"></i>Contact Details</p>
            <p class="content">Email: {{order.userDetails.email}} <br> Phone: +91 {{order.userDetails.mobile}}</p>
        </div>

        <div class="summary">
            <p class="heading"><i class="fa-solid fa-clipboard-list"></i>Order Summary</p>
            <div class="content">
                <p>Sub Total: <span>₹ {{order.orderValue.discounted_total}}</span> </p>
                <p>Coupon Value: <span>₹ {{order.orderValue.coupon_discount}}</span> </p>
                <p>Delivery Charges: <span>₹ {{order.orderValue.delivery_charges}}</span> </p>
                <br>
                <hr>
                <br>
                <p>Total: <span>₹ {{order.orderValue.final_payable}}</span> </p>
            </div>
        </div>

        <div class="redirect">
            <a href="/orders">Got to orders <i class="fa-solid fa-caret-right"></i></a>
        </div>
    </div>
</div>